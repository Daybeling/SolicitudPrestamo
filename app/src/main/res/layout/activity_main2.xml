<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/Titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Solicitud de Prestamo"
        android:textColor="#409AC4"
        android:textSize="30sp"
        android:layout_margin="15dp" android:padding="5dp"/>

    <TextView
        android:id="@+id/SubTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Registro del cliente"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:textColor="#F9263D"
        android:layout_margin="5dp" android:padding="5dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        ></LinearLayout>








</LinearLayout>